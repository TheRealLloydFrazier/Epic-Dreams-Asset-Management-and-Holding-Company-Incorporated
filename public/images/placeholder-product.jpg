node - <<'NODE'
const fs=require('fs');
const files=[
  'src/app/page.tsx',
  'src/components/store/StoreGrid.tsx',
  'src/app/product/[slug]/page.tsx',
  'src/components/store/RelatedProducts.tsx',
  'src/components/store/CartClient.tsx',
  'src/app/releases/[slug]/page.tsx',
  'src/app/releases/page.tsx',
  'src/app/artist/page.tsx',
  'src/app/artist/[slug]/page.tsx'
];
for(const file of files){
  let content=fs.readFileSync(file,'utf8');
  content=content.replace(/\/images\/placeholder-product\.jpg/g,'/images/placeholder-product.svg');
  content=content.replace(/\/images\/placeholder-release\.jpg/g,'/images/placeholder-release.svg');
  content=content.replace(/\/images\/placeholder-artist\.jpg/g,'/images/placeholder-artist.svg');
  fs.writeFileSync(file,content);
}
NODE
